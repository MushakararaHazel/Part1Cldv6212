<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABC Retailers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        /* General background */
        body {
            background: #fdf6f9; /* light pinkish */
            font-family: "Poppins", sans-serif;
        }

        /* Navbar */
        .navbar {
            background: linear-gradient(90deg, #ffb6c1, #ffcce7);
        }

        .navbar-brand, .nav-link {
            color: #fff !important;
            font-weight: 500;
        }

            .nav-link:hover {
                color: #ffe4f3 !important;
            }

        /* Alert Messages */
        .alert {
            border-radius: 15px;
        }

        /* Main Container */
        main {
            background: #ffffff;
            border-radius: 20px;
            padding: 20px;
            margin-top: 20px;
            box-shadow: 0px 4px 15px rgba(0,0,0,0.1);
        }

        /* Footer */
        footer {
            background: #ffeaf5;
            border-top: 2px solid #ffb6c1;
            font-size: 0.9rem;
        }

            footer a {
                color: #d63384;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        /* Cute buttons */
        .btn-cute {
            background: #ffb6c1;
            color: #fff;
            border-radius: 30px;
            padding: 8px 18px;
            border: none;
            transition: 0.3s;
        }

            .btn-cute:hover {
                background: #ff9ab3;
                color: #fff;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-store"></i> ABC Retailers
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Customer" asp-action="Index"><i class="fas fa-users"></i> Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="Index"><i class="fas fa-box"></i> Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Order" asp-action="Index"><i class="fas fa-shopping-cart"></i> Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Upload" asp-action="Index"><i class="fas fa-upload"></i> Upload Files</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy"><i class="fas fa-shield-alt"></i> Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-3">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mt-3">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-5 py-3">
        <div class="container text-center">
            <p class="mb-1">&copy; 2025 - ABC Retailers</p>
            <p class="text-muted"><i class="fas fa-store"></i> Your one-stop shop for the cutest products 💖</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
