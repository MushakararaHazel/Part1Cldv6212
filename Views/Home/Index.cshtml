@model ABCRetails.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center my-4">
    <h1 class="display-5 fw-bold text-pink">
        <i class="fas fa-store"></i> Welcome to ABC Retailers 💖
    </h1>
    <p class="lead text-muted">Your one-stop shop for the cutest products 🎀</p>
</div>

<!-- Quick Stats Section -->
<div class="row text-center mb-5">
    <div class="col-md-4">
        <div class="card card-cute shadow-sm p-3">
            <i class="fas fa-box fa-2x text-success mb-2"></i>
            <h5>@Model.ProductCount Products</h5>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-cute shadow-sm p-3">
            <i class="fas fa-users fa-2x text-primary mb-2"></i>
            <h5>@Model.CustomerCount Customers</h5>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-cute shadow-sm p-3">
            <i class="fas fa-shopping-cart fa-2x text-warning mb-2"></i>
            <h5>@Model.OrderCount Orders</h5>
        </div>
    </div>
</div>

<!-- Navigation Shortcuts -->
<div class="row g-4 justify-content-center mb-5">
    <div class="col-md-3">
        <div class="card card-cute shadow-sm border-0 rounded-4 text-center p-3">
            <i class="fas fa-users fa-3x mb-3 text-primary"></i>
            <h5>Customers</h5>
            <a asp-controller="Customer" asp-action="Index" class="btn btn-cute mt-2">
                <i class="fas fa-arrow-right"></i> Manage
            </a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card card-cute shadow-sm border-0 rounded-4 text-center p-3">
            <i class="fas fa-box fa-3x mb-3 text-success"></i>
            <h5>Products</h5>
            <a asp-controller="Product" asp-action="Index" class="btn btn-cute mt-2">
                <i class="fas fa-arrow-right"></i> View
            </a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card card-cute shadow-sm border-0 rounded-4 text-center p-3">
            <i class="fas fa-shopping-cart fa-3x mb-3 text-warning"></i>
            <h5>Orders</h5>
            <a asp-controller="Order" asp-action="Index" class="btn btn-cute mt-2">
                <i class="fas fa-arrow-right"></i> Check
            </a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card card-cute shadow-sm border-0 rounded-4 text-center p-3">
            <i class="fas fa-upload fa-3x mb-3 text-danger"></i>
            <h5>Uploads</h5>
            <a asp-controller="Upload" asp-action="Index" class="btn btn-cute mt-2">
                <i class="fas fa-arrow-right"></i> Go
            </a>
        </div>
    </div>
</div>



<!-- Cute Styling -->
<style>
    .text-pink {
        color: #d63384;
    }

    .card-cute {
        background: #fff9fb;
        transition: 0.3s;
        border-radius: 15px;
    }

        .card-cute:hover {
            transform: translateY(-6px);
            box-shadow: 0px 10px 25px rgba(255, 182, 193, 0.45);
        }
</style>
